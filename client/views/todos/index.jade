h1 To Do List

.row
  .col-lg-3.col-md-2.col-xs-1
  .col-lg-6.col-md-8.col-xs-10
    form(name='todoForm', novalidate)
      .form-group
        label(for='title') Title
        input.form-control(type='text', name='title', ng-model='todo.title')
      .form-group
        label(for='due') Due
        input.form-control(type='date', name='due', ng-model='todo.due')          
      .form-group
        label(for='priority') Priority
        select.form-control(name='priority', ng-init='todo.priority="High"', ng-model='todo.priority')
          option High
          option Medium
          option Low
      .form-group
        button.btn.btn-primary(type='submit' ng-click='add()') Add Task
  .col-lg-3.col-md-2.col-xs-1

.row
  .col-xs-1
  .col-xs-10
    table.table.table-hover.table-striped
      thead
        tr
          th Complete?
          th Title
          th Due
          th Priority
      tbody
        tr(ng-repeat='todo in todos' ng-class='{complete:todo.isComplete}')
          td: input(type='checkbox', ng-model='todo.isComplete', ng-click='update(todo)')
          td {{todo.title}}
          td {{todo.due}}
          td {{todo.priority}}
  .col-xs-1
